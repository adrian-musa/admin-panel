<div class='container py-3 bg-dark'>
	<header>
		<div class='d-flex flex-column flex-md-row align-items-center pb-3 mb-4 border-bottom'>
			<a href='/' class='d-flex align-items-center text-white text-decoration-none'>
				<span class='fs-4'>Musa Shop</span>
			</a>

			<nav class='d-inline-flex mt-2 mt-md-0 ms-md-auto'>

				{{#if isProducts}}
					<a class='me-3 py-2 text-white' href='/products'>Products</a>
				{{else}}
					<a class='me-3 py-2 text-white text-decoration-none' href='/products'>Products</a>
				{{/if}}

				{{#if isAdd}}
					<a class='me-3 py-2 text-white' href='/add'>Add</a>
				{{else}}
					<a class='me-3 py-2 text-white text-decoration-none' href='/add'>Add</a>
				{{/if}}

				<div class='btn-group' role='group' aria-label='Basic mixed styles example'>
					{{#if token}}
						<button type='button' class='btn btn-danger active'>
							<a class='text-light text-decoration-none' href='/logout'>Logout</a>
						</button>
					{{else}}
						{{#if isLogin}}
							<button type='button' class='btn btn-primary active'>
								<a class='text-light text-decoration-none' href='/login'>Login</a>
							</button>
						{{else}}
							<button type='button' class='btn btn-primary'>
								<a class='text-light text-decoration-none' href='/login'>Login</a>
							</button>
						{{/if}}

						{{#if isRegister}}
							<button type='button' class='btn btn-success active'>
								<a class='text-light text-decoration-none' href='/register'>Register</a>
							</button>
						{{else}}
							<button type='button' class='btn btn-success'>
								<a class='text-light text-decoration-none' href='/register'>Register</a>
							</button>
						{{/if}}
					{{/if}}
				</div>
			</nav>
		</div>
	</header>
</div>